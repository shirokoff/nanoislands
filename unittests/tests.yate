include '../nanoislands.yate'

match / {
    nb-button({
        "content": "Button"
        "id": "button"
    })

    nb-button({
        "content": "Disbaled button"
        "disabled": true()
        "id": "button-disabled"
    })

    nb-checkbox({
        "attrs": {
            "value": "my-value"
        }
        "checked": true()
        "content": "Button"
        "id": "checkbox-checked"
    })

    nb-checkbox({
        "attrs": {
            "value": "my-value"
        }
        "disabled": true()
        "content": "Button"
        "id": "checkbox-disabled"
    })

     nb-checkbox({
            "attrs": {
                "value": "my-value"
            }
            "content": "Button"
            "id": "checkbox"
        })

    nb-select({
        "disabled": true()
        "id": "select-disabled"
        "items": []
    })

    nb-select( {
      'size': 'm'
      'id': 'select'
      'attrs': {
        'name': 'myname'
      }
      'class': 'my-test-class'
      'items': [
          {
              'text': 'Карта'
              'value': 'option1'
              'selected': true()
          }
          {
              'text': 'Гибрид'
              'value': 'option3'
          }
      ]
    })

    nb-input({
        "size": "s"
        "attrs": {
            "placeholder": "Please, enter your name"
        }
        "content": "Viktor"
        "id": "input"
        "name": "last-name"

    })

    nb-toggler({
        "id": "toggler"
        "attrs": {
            "value": "value"
        }
    })

    nb-toggler({
        "disabled": true()
        "id": "toggler-disabled"
    })

    nb-toggler({
        "checked": true()
        "id": "toggler-checked"
    })


    nb-slider({
      "value": 25
      "id": "slider"
    })

    nb-slider({
      "value": 40
      "name": "price"
      "disabled": true()
      "id": "slider-disabled"
    })

    nb-progress({
        'id': 'progress'
        'start': '20'
    })
}
