/*
    Кнопка.
*/

@import '_skin-dark'

$skin-islands-button-content = '.nb-button__text'
$skin-islands-button-disabled = '.is-disabled'

// Обычная кнопка
.nb-button_theme_normal
  kind: button
  skin: button

// Маленькая обычная кнопка
.nb-button_theme_normal.nb-button_size_s
  skin: button small

// Летающая кнопка
.nb-button_flying
  skin: button fly

// Маленькая летающая кнопка
.nb-button_flying.nb-button_size_s
  skin: button fly small

// Кнопка-действие
.nb-button_theme_action
  kind: button
  skin: action-button

// Маленькая кнопка-действие
.nb-button_theme_action.nb-button_size_s
  skin: action-button small

// Темная кнопка
.nb-button_theme_dark
  kind: button
  skin: dark-button

// Little black --dress-- button
.nb-button_theme_dark.nb-button_size_s
  skin: dark-button small

// Псевдо-кнопка
.nb-button_theme_pseudo
  kind: button
  skin: pseudo-button

// Маленькая псевдо-кнопка
.nb-button_theme_pseudo.nb-button_size_s
  skin: pseudo-button small

// Промо-кнопка
.nb-button_theme_promo
  kind: button
  skin: promo-button

// Маленькая промо-кнопка
.nb-button_theme_promo.nb-button_size_s
  skin: promo-button small

// Большая промо-кнопка
.nb-button_theme_promo.nb-button_size_l
  skin: promo-button large

// Очень большая промо-кнопка
.nb-button_theme_promo.nb-button_size_xl
  skin: promo-button xlarge

// Кнопка аттача

.nb-file-intruder
  kind: file-intruder \
    (-inner '&__inner') \
    (-input '&__input') \
    (-focus '&__focus' 'islands-button_focus_style')
