func nb-island(nodeset options) {
    island = {
        'content': ''
    }

    nb-block('island', nb-extend(island, options))

}

match .island nb {
    <div class="nb-island">
        apply . nb-main-attrs

        if .padding {
            @class += ' nb-island_padding_{ .padding }'
        }

        if .type {
            @class += ' nb-island_type_{ .type }'
        }

        if .content {
            html(.content)
        }
    </div>
}

