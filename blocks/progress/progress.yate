func nb-progress(nodeset options) {
    default = {
        'bar': 'true'
        'start': '0'
        'type': 'percentage'
        'title': ' '

        // показывать проценты
        // 'type': 'title'

    }

    nb-block('progress', nb-extend(default, options))
}

match .progress nb {
    <div class='nb-progress _init nb-progress_type_{ .type }' data-nb-type='{ .type }'>

        apply . nb-main-attrs

        if .bar {
            <div class="nb-progress__bar js-bar" style="width: { .start }%"></div>
        }

        if .title {
            <div class="nb-progress__title js-title">
                if .type == 'percentage' {
                    .start + '%'
                } else {
                    .title
                }
            </div>
        }
        <input type="hidden" value="{ .start }%" />
    </div>
}


